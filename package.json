{
  "name": "web-api",
  "private": true,
  "scripts": {
    "build": "tsc --outDir dist",
    "migrate": "prisma db push",
    "start": "nodemon src"
  },
  "dependencies": {
    "@prisma/client": "^4.13.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "uuid": "^9.0.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^18.16.5",
    "@types/uuid": "^9.0.1",
    "dotenv": "^16.0.3",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "prisma": "^4.13.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "nodemonConfig": {
    "events": {
      "start": "clear"
    },
    "exec": "node --inspect --require dotenv/config --require ts-node/register",
    "ext": "ts",
    "watch": [
      "src",
      ".env",
      "package.json",
      "schema.prisma",
      "tsconfig.json"
    ]
  },
  "prisma": {
    "seed": "ts-node src/seed.ts"
  },
  "prettier": {
    "singleQuote": true
  }
}
